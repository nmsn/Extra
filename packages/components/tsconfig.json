{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts",
      "../../node_modules/@types",
      "../../global.d.ts"
    ]
  },
  "include": ["src/**/*", "global.d.ts"],
  "compileOnSave": false
}
